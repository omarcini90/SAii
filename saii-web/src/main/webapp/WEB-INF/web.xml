<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-app_3_1.xsd">
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jaas-security-domain</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/denied.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <!-- New roles must be mapped to jaas-security-domain.properties -->
    <security-role>
        <role-name>ADMIN_FIMPES</role-name>
    </security-role>
    <security-role>
        <role-name>SUPERVISOR_FIMPES</role-name>
    </security-role>    
    <security-role>
        <role-name>ADMIN_INSTITUTO</role-name>
    </security-role>
    <security-role>
        <role-name>SUPERVISOR_INSTITUTO</role-name>
    </security-role>
    <security-role>
        <role-name>COLABORADOR_INSTITUTO</role-name>
    </security-role>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.PARTIAL_STATE_SAVING</param-name>
        <param-value>false</param-value>
    </context-param>
    <!-- Admin LTE Theme is used without Template -->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.FONT_AWESOME</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
        <url-pattern>*.faces</url-pattern>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            22
        </session-timeout>
    </session-config>
    <!-- Security -->
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>400</error-code>
        <location>/notFound.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/notFound.xhtml</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/denied.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/denied.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>Restricted Constraint</display-name>        
        <web-resource-collection>
            <web-resource-name>Template resources</web-resource-name>
            <description/>
            <url-pattern>/WEB-INF/templates/*</url-pattern>
            <url-pattern>/faces/WEB-INF/templates/*</url-pattern>
            <url-pattern>/header.xhtml</url-pattern>
            <url-pattern>/faces/header.xhtml</url-pattern>
            <url-pattern>/footer.xhtml</url-pattern>
            <url-pattern>/faces/footer.xhtml</url-pattern>
            <url-pattern>/aboutDialog.xhtml</url-pattern>
            <url-pattern>/faces/aboutDialog.xhtml</url-pattern>
            <url-pattern>/idleMonitor.xhtml</url-pattern>
            <url-pattern>/faces/idleMonitor.xhtml</url-pattern>
            <url-pattern>/privacyDialog.xhtml</url-pattern>
            <url-pattern>/faces/privacyDialog.xhtml</url-pattern>
            <url-pattern>/privacyDialog.xhtml</url-pattern>
            <url-pattern>/faces/privacyDialog.xhtml</url-pattern>
            <url-pattern>/adminManualDialog.xhtml</url-pattern>
            <url-pattern>/faces/adminManualDialog.xhtml</url-pattern>
            <url-pattern>/opManualDialog.xhtml</url-pattern>
            <url-pattern>/faces/opManualDialog.xhtml</url-pattern>
            <url-pattern>/statusDialog.xhtml</url-pattern>
            <url-pattern>/faces/statusDialog.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
    <security-constraint>
        <display-name>Profile Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Index</web-resource-name>
            <description/>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/faces/index.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Password resources</web-resource-name>
            <description/>
            <url-pattern>/usuarios/changePassword.xhtml</url-pattern>
            <url-pattern>/faces/usuarios/changePassword.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Log resources</web-resource-name>
            <description/>
            <url-pattern>/usuarios/eventLog.xhtml</url-pattern>
            <url-pattern>/faces/usuarios/eventLog.xhtml</url-pattern>
            <url-pattern>/usuarios/showEventDialog.xhtml</url-pattern>
            <url-pattern>/faces/usuarios/showEventDialog.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>           
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Business Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Catalogs resources</web-resource-name>
            <description/>
            <url-pattern>/campus/*</url-pattern>
            <url-pattern>/faces/campus/*</url-pattern>
            <url-pattern>/instituciones/*</url-pattern>
            <url-pattern>/faces/instituciones/*</url-pattern>
            <url-pattern>/programas/*</url-pattern>
            <url-pattern>/faces/programas/*</url-pattern>
            <url-pattern>/proceso/*</url-pattern>
            <url-pattern>/faces/proceso/*</url-pattern>
            <url-pattern>/reportes/*</url-pattern>
            <url-pattern>/faces/reportes/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>          
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Core Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Catalogs resources</web-resource-name>
            <description/>
            <url-pattern>/indicadores/*</url-pattern>
            <url-pattern>/faces/indicadores/*</url-pattern>
            <url-pattern>/periodo/*</url-pattern>
            <url-pattern>/faces/periodo/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>SUPERVISOR_FIMPES</role-name>
            <role-name>ADMIN_FIMPES</role-name>            
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Access Control Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Security resources</web-resource-name>
            <description/>
            <url-pattern>/responsables/*</url-pattern>
            <url-pattern>/faces/responsables/*</url-pattern>
            <url-pattern>/usuarios/*</url-pattern>
            <url-pattern>/faces/usuarios/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN_INSTITUTO</role-name>
            <role-name>ADMIN_FIMPES</role-name>            
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Settings Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Configuration resources</web-resource-name>
            <description/>
            <url-pattern>/modulos/*</url-pattern>
            <url-pattern>/faces/modulos/*</url-pattern>
            <url-pattern>/menus/*</url-pattern>
            <url-pattern>/faces/menus/*</url-pattern>
            <url-pattern>/sistemas/*</url-pattern>
            <url-pattern>/faces/sistemas/*</url-pattern>
            <url-pattern>/correo/*</url-pattern>
            <url-pattern>/faces/correo/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Security resources</web-resource-name>
            <description/>
            <url-pattern>/roles/*</url-pattern>
            <url-pattern>/faces/roles/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN_FIMPES</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>